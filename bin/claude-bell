#!/usr/bin/env bash

set -Eeuo pipefail
IFS=$'\n\t'

if [ "$(uname)" = 'Darwin' ]; then
  frontmost=$(osascript -e '
    tell application "System Events"
      get name of first application process whose frontmost is true
    end tell
  ')
  if [ "$frontmost" != 'ghostty' ]; then
    tput bel >/dev/tty
    afplay /System/Library/Sounds/Sosumi.aiff
  fi
else
  tput bel >/dev/tty
fi
