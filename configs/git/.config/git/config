[alias]
  # ADD
  a = add
  ap = add --patch

  # BRANCH
  b = branch
  bd = branch --delete --force
  bm = branch --move

  # CHERRY-PICK
  ch = cherry-pick
  chc = cherry-pick --continue
  chs = cherry-pick --skip
  cha = cherry-pick --abort

  # COMMIT
  c = commit
  ca = commit --amend
  can = commit --amend --no-edit

  # DIFF
  d = diff
  ds = diff --staged

  # FETCH
  f = fetch

  # LOG
  l = log --oneline --graph --first-parent --max-count 10
  ll = log --oneline --graph --first-parent

  # LOOKUP
  k = lookup

  # PULL
  pullff = pull --ff-only

  # PUSH
  p = confirm-push
  pf = confirm-push --force-with-lease
  pu = confirm-push --set-upstream origin HEAD

  # REBASE
  rb = rebase
  rbi = rebase --interactive
  rbib = "!git rebase --interactive \"$(git merge-base \"$(git rev-parse --abbrev-ref refs/remotes/origin/HEAD)\" HEAD)\" #"
  rbc = rebase --continue
  rbs = rebase --skip
  rba = rebase --abort

  # RESET
  r = reset --mixed
  rs = reset --soft
  rh = reset --hard

  # RESTORE
  re = restore
  rep = restore --patch
  res = restore --staged
  resp = restore --staged --patch

  # REVISE
  rv = revise
  rvi = revise --interactive
  rvib = "!git revise --interactive \"$(git merge-base \"$(git rev-parse --abbrev-ref refs/remotes/origin/HEAD)\" HEAD)\" #"

  # SHOW
  sh = show
  shn = show --name-status

  # STASH
  st = stash push --staged
  sts = stash show --patch
  stl = stash list
  stp = stash pop
  std = stash drop

  # STATUS
  s = status

  # SWITCH
  sw = switch
  swc = switch --create

  # WORKTREE
  wt = worktree
[commit]
  gpgSign = true
[core]
  pager = delta
[delta]
  light = true
  color-only = true
[diff]
  tool = nvim
[difftool]
  prompt = false
[difftool "nvim"]
  cmd = nvim -d "$LOCAL" "$REMOTE"
[fetch]
  prune = true
  pruneTags = true
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta
  singleKey = true
[merge]
  tool = nvim
  autoStash = true
  conflictstyle = zdiff3
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "nvim"]
  cmd = nvim -d "$LOCAL" "$MERGED" "$REMOTE"
[rebase]
  autoStash = true
  autoSquash = true
[revise]
  gpgSign = true
  autoSquash = true
[user]
  name = Evan Relf
  useConfigOnly = true
[include]
  path = ~/.config/git/local
