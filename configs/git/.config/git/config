[alias]
  # ADD
  a = add
  ap = add --patch

  # BRANCH
  b = branch
  bd = branch --delete --force
  bm = branch --move

  # COMMIT
  c = commit
  ca = commit --amend
  can = commit --amend --no-edit

  # DIFF
  d = diff
  ds = diff --staged

  # PUSH
  p = push
  pf = push --force-with-lease
  pu = push --set-upstream origin HEAD

  # REBASE
  rb = rebase
  rbi = rebase --interactive

  # RESTORE
  re = restore
  res = restore --staged

  # STATUS
  s = status

  # SWITCH
  sw = switch
  swc = switch --create
[commit]
  gpgSign = true
[init]
  defaultBranch = main
[user]
  name = "Evan Relf"
  useConfigOnly = true
[include]
  path = "~/.config/git/local"
