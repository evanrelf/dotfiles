[alias]
  # ADD
  a = add
  ap = add --patch

  # BRANCH
  b = branch
  bd = branch --delete --force
  bm = branch --move

  # COMMIT
  c = commit
  ca = commit --amend
  can = commit --amend --no-edit

  # DIFF
  d = diff
  ds = diff --staged

  # FETCH
  f = fetch

  # LOG
  l = log --oneline --graph --first-parent --max-count 20
  ll = log --oneline --graph --first-parent

  # PULL
  pullff = pull --ff-only

  # PUSH
  p = confirm-push
  pf = confirm-push --force-with-lease
  pu = confirm-push --set-upstream origin HEAD

  # REBASE
  rb = rebase
  rbi = rebase --interactive
  rbc = rebase --continue
  rbs = rebase --skip
  rba = rebase --abort

  # RESET
  r = reset --mixed
  rs = reset --soft
  rh = reset --hard

  # RESTORE
  re = restore
  rep = restore --patch
  res = restore --staged
  resp = restore --staged --patch

  # STATUS
  s = status

  # SWITCH
  sw = switch
  swc = switch --create

  # WORKTREE
  wt = worktree
[commit]
  gpgSign = true
[init]
  defaultBranch = main
[user]
  name = "Evan Relf"
  useConfigOnly = true
[include]
  path = "~/.config/git/local"
