[user]
	name = Evan Relf
	email = evan@evanrelf.com
	signingkey = EBF02C975E8F50A9
[core]
	editor = nvim
[alias]
	c = commit
	co = checkout
	b = branch
	s = status
	l = log
[push]
	default = current
[credential]
	helper = osxkeychain
[color]
	ui = auto
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool]
	prompt = false
[diff]
	tool = Kaleidoscope
[commit]
	gpgsign = true
