# VARIABLES {{{1
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term kitty
set $menu rofi -show run | xargs swaymsg exec
set $resize_amount 20px


# INPUTS {{{1
input "1:1:AT_Translated_Set_2_keyboard" {
    repeat_delay 200
    repeat_rate 30
}
input "2:7:SynPS/2_Synaptics_TouchPad" {
    accel_profile adaptive
    pointer_accel 0.6
    natural_scroll enabled
    tap enabled
    drag disabled
    drag_lock disabled
    dwt disabled
    middle_emulation enabled
}
input "2:10:TPPS/2_Elan_TrackPoint" {
    natural_scroll enabled
    pointer_accel 0.5
}
input * {
    repeat_delay 200
    repeat_rate 30
    natural_scroll enabled
    pointer_accel 0.5
}

seat "internal" {
    attach "1:1:AT_Translated_Set_2_keyboard"
    attach "2:7:SynPS/2_Synaptics_TouchPad"
