# Any keyboard
input "type:keyboard" {
  repeat_delay 200
  repeat_rate 30
}

# Built-in trackpad
input "1739:0:Synaptics_TM3289-021" {
  pointer_accel 0.3 # -1 to 1
  scroll_factor 1.3 # non-negative float
}

# External Apple trackpad
input "Apple Inc. Magic Trackpad 2" {
  pointer_accel 0.3 # -1 to 1
  scroll_factor 1.3 # non-negative float
}

# Any touchpad
input "type:touchpad" {
  accel_profile adaptive
  click_method none
  drag disabled
  drag_lock disabled
  dwt disabled
  middle_emulation disabled
  natural_scroll enabled
  scroll_method two_finger
  tap disabled
}
