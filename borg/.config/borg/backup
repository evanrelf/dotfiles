#!/bin/sh

set -e

# This assumes you have the following environment variables set correctly:
# - BORG_REMOTE_PATH
# - BORG_REPO
# - BORG_PASSPHRASE

borg \
  --verbose \
  create \
  --stats \
  --exclude-from "$HOME/.config/borg/exclude" \
  --compression zstd,10 \
  ::"$(date -u +'%Y-%m-%dT%H:%M:%SZ')" \
  "$HOME"
