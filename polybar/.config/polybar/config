; vim: ft=dosini

; Material Icons
; https://material.io/tools/icons/
; https://github.com/google/material-design-icons/blob/master/iconfont/codepoints

[colors]
foreground = #CCCCCC
background = #000000
dimmed = #777777
highlight = #5294E2

[bar/bar]
width = 100%
height = 30
font-0 = Roboto:style=Regular:size=13
font-1 = Material Icons:style=Regular:size=13
underline-size = 1
underline-color = ${colors.foreground}
fixed-center = true
foreground = ${colors.foreground}
background = ${colors.background}
modules-left = workspaces
; modules-center = title
modules-right = brightness sep volume sep battery sep wifi sep date pad
; enable-ipc = true

[module/sep]
type = custom/text
content = " | "
content-foreground = ${colors.dimmed}

[module/pad]
type = custom/text
content = " "

[module/date]
type = internal/date
interval = 1.0
date = "%a %b %e"
time = "%l:%M %p"
label = "%date% %time%"

[module/brightness]
type = internal/backlight
card = intel_backlight
label = " %percentage%%"

[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
time-format = %-H:%M
full-at = 90
poll-interval = 30
label-discharging = " %percentage%% (%time%)"
label-charging = " %percentage%% (%time%)"
label-full = " %percentage%%"

[module/volume]
type = internal/pulseaudio
sink = "alsa_output.pci-0000_00_1b.0.analog-stereo"
label-volume = " %percentage%%"
label-muted = " Muted"

[module/wifi]
type = internal/network
interface = wlp4s0
label-connected = " %essid%"
label-disconnected = " Disconnected"

[module/title]
type = internal/xwindow

[module/workspaces]
type = internal/xworkspaces
enable-scroll = false
label-active = "  %index%  "
label-empty = "  %index%  "
label-active-foreground = ${colors.foreground}
label-active-underline = ${colors.foreground}
label-empty-foreground = ${colors.dimmed}
