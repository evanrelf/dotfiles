; vim: ft=dosini

[colors]
foreground = #FFFFFF
background = #000000
dimmed = #777777
highlight = #5294e2

[bar/top]
width = 100%
height = 25
font-0 = xos4Terminus:style=Regular:pixelsize=16
font-1 = WunconSiji:style=Regular:pixelsize=16
underline-size = 1
underline-color = ${colors.foreground}
fixed-center = true
foreground = ${colors.foreground}
background = ${colors.background}
modules-left = workspaces
modules-center = title
modules-right = brightness sep volume sep battery sep wifi sep date pad
enable-ipc = true

[module/sep]
type = custom/text
content = " | "
content-foreground = ${colors.dimmed}

[module/pad]
type = custom/text
content = " "

[module/date]
type = internal/date
interval = 1.0
date = "%a %b %e"
time = "%l:%M %p"
label = "%date% %time%"

[module/brightness]
type = internal/backlight
card = intel_backlight
label = " %percentage%%"

[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
time-format = %-H:%M
full-at = 90
poll-interval = 30
label-discharging = " %percentage%% (%time%)"
label-charging = " %percentage%% (%time%)"
label-full = " %percentage%%"

[module/volume]
type = internal/pulseaudio
label-volume = " %percentage%%"
label-muted = " Muted"

[module/wifi]
type = internal/network
interface = wlp4s0
label-connected = " %essid%"
label-disconnected = " Disconnected"

[module/title]
type = internal/xwindow

[module/layout]
type = custom/ipc
; Tall
hook-0 = "printf '\ue257'"
; Full
hook-1 = "printf '\ue255'"
initial = 1

[module/workspaces]
type = internal/xworkspaces
enable-scroll = false
label-active = " %index% "
label-empty = " %index% "
label-active-foreground = ${colors.foreground}
label-active-underline = ${colors.foreground}
label-empty-foreground = ${colors.dimmed}
