; vim: ft=dosini

; Material Icons
; https://material.io/tools/icons/
; https://github.com/google/material-design-icons/blob/master/iconfont/codepoints

[settings]
screenchange-reload = false

[colors]
foreground = #CCCCCC
background = #000000
dimmed = #777777
highlight = #5294E2
error = #df6470

[bar/bar]
monitor = ${env:MONITOR:}
monitor-fallback = eDP1
width = 100%
height = 35
padding = 1

font-0 = Noto Sans Medium:style=Regular:size=15
font-1 = Material Icons:style=Regular:size=15

line-size = 2
line-color = ${colors.foreground}

fixed-center = true

foreground = ${colors.foreground}
background = ${colors.background}

modules-left = workspaces sep title
modules-right = volume-alsa sep brightness sep battery sep wireguard sep wifi sep date

tray-position = right
tray-maxsize = 32

[module/sep]
type = custom/text
content = "|"
content-padding = 2
content-foreground = ${colors.dimmed}

[module/date]
type = internal/date
interval = 1.0
date = "%a %b %e"
date-alt = "%Y-%m-%d"
time = "%l:%M %p"
time-alt = "%l:%M %p"
; time-alt = "%H:%M"
label = "%date% %time%"

[module/brightness]
type = internal/backlight
card = intel_backlight
label = " %percentage%%"

[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
time-format = %-H:%M
full-at = 95
poll-interval = 30
label-discharging = " %percentage%%"
; label-discharging = " %percentage%% (%time%)"
; label-charging = " %percentage%%"
label-charging = " %percentage%% (%time%)"
; label-full = " %percentage%%"
label-full = " Charged"

[module/volume]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
label-volume = " %percentage%%"
label-muted = " Muted"

[module/volume-alsa]
type = internal/alsa
; headphone-soundcard = 1
; headphone-mixer = PCM
format-volume = <ramp-volume> <label-volume>
format-muted =  <label-muted>
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 
ramp-headphones-1 = 
label-muted = Muted

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600

[module/wireguard]
type = custom/script
exec = "wg show >/dev/null 2>&1 && echo '%{F#df6470} Insecure%{F-}' || echo ' Secure'"
interval = 10

[module/wifi]
type = internal/network
interface = wlp2s0
label-connected = " %essid%"
label-disconnected = " Disconnected"

[module/ethernet]
type = internal/network
interface = enp0s31f6

[module/title]
type = internal/xwindow
label = %title%
label-empty = XMonad

[module/workspaces]
type = internal/xworkspaces
enable-scroll = false
label-active = " %index% "
label-empty = " %index% "
label-active-foreground = ${colors.foreground}
; label-active-overline = ${colors.foreground}
label-active-underline = ${colors.foreground}
label-empty-foreground = ${colors.dimmed}
label-urgent-foreground = ${colors.highlight}

[module/memory]
type = internal/memory
label = RAM: %gb_used%
interval = 2

[module/cpu]
type = internal/cpu
label = CPU: %percentage%%
interval = 2

[module/filesystem]
type = internal/fs
mount-0 = /
format-mounted =  <label-mounted>
label-mounted = %percentage_used%%
