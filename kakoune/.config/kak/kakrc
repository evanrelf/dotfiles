# SETTINGS
colorscheme gruvbox
set-option global indentwidth 2
set-option global ui_options ncurses_enable_mouse=false:ncurses_set_title=false:ncurses_assistant=none
set-option global grepcmd 'rg --column'


# COMMANDS
alias global bd delete-buffer
alias global x write-quit

define-command config -docstring 'Edit Kakoune config' %{
  edit ~/.config/kak/kakrc
}


# MAPPINGS
map global normal \; :
map global normal : \;


# HOOKS
hook global WinCreate .* %{
  add-highlighter window number_lines -hlcursor -separator ' '
}

hook global InsertCompletionShow .* %{
  map window insert <tab> <c-n>
  map window insert <s-tab> <c-p>
}

hook global InsertCompletionHide .* %{
  unmap window insert <tab> <c-n>
  unmap window insert <s-tab> <c-p>
}
