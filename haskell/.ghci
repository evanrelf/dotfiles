-- Prompt
:set prompt "\ESC[1;35m\x03BB> \ESC[m"
:set prompt-cont "\ESC[1;35m | \ESC[m"

-- Path-local ghci history
:set -flocal-ghci-history

-- Better errors
:set -fshow-warning-groups -ferror-spans -freverse-errors -fprint-expanded-synonyms

-- Better typed holes
:set -funclutter-valid-hole-fits -fabstract-refinement-hole-fits -frefinement-level-hole-fits=2

-- Treat warnings as warnings
:set -Wwarn

-- Load ghci faster when using polysemy
:set -O0 -fno-late-specialise -fno-specialise-aggressively

-- https://github.com/github/semantic/blob/master/.ghci.sample
